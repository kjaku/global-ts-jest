{
    "compilerOptions": {
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "target": "ES2020",
        "rootDir": "./", 
        "skipLibCheck": true,
        "noEmit": true
    },
    "exclude": [
        "node_modules",
        "./node_modules/**/*",
        "./build",
        ".git/**"
    ],
    "include": [
        "./*"
    ],
    "ts-node": {
        "transpileOnly": true,
        "files": true,
        "compilerOptions": {
            "rootDir": "."
        }
    }
}